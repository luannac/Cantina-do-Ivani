@model Cantina_agil.Models.Sangria

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Deletar</h2>

<div>
    <h4>Sangria</h4>
    <hr />
    <dl class="dl-horizontal">

        <dd>
          <label>Abertura</label>  @Html.DisplayFor(model => model.abertura)
        </dd>
        <hr />

        <dd>
            <label>Fechamento</label>  @Html.DisplayFor(model => model.fechamento)
        </dd>
        <hr />

        <dd>
            <label>Valor</label>  @Html.DisplayFor(model => model.valorSangria)
        </dd>
        <hr />

        <dd>
            <label>Nome Atendente</label>   @Html.DisplayFor(model => model.Atendente.nomeAtendente)
        </dd>
        <hr />

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()
        <h3>Tem certeza que Deseja Deletar?</h3>

        <div class="form-actions no-color">
            <input type="submit" value="Deletar" class="btn btn-primary" /> 
            <a href=@Url.Action("Index","Sangrias") class="btn btn-primary" data-toggle="button">
                Voltar para Lista
            </a>
        </div>
    }
</div>
