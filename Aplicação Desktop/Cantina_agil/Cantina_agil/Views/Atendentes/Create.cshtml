@model Cantina_agil.Models.Atendente

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link href="~/Content/formatationCadastrar.css" rel="stylesheet" />

</head>

<h2>Criando...</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="Image">
        <div class="container">
            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <div class="row">
                        <div class="col-lg-5 d-none d-lg-block bg-register-image">
                            <img class="img" src="~/Image/atendente.png" />
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Criar" class="btn btn-primary" />
                                    <a href=@Url.Action("Index", "Atendentes") class="btn btn-primary" data-toggle="button">
                                        Voltar para Lista
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-7">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4">Crie sua Conta!</h1>
                                </div>
                                <form class="user">
                                    <h4>Atendentes</h4>
                                    <hr />
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <div class="form-group row">
                                        <div class="col-sm-6 mb-3 mb-sm-0 row esquerda">

                                            <div class="form-group">
                                                <label class="control-label">Nome:</label>
                                                @Html.EditorFor(model => model.nomeAtendente, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.nomeAtendente, "", new { @class = "text-danger" })

                                                <label class="control-label">Login:</label>
                                                @Html.EditorFor(model => model.loginAtendente, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.loginAtendente, "", new { @class = "text-danger" })

                                                <label class="control-label">E-mail:</label>
                                                @Html.EditorFor(model => model.emailAtendente, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.emailAtendente, "", new { @class = "text-danger" })

                                                <label class="control-label">CPF:</label>
                                                @Html.EditorFor(model => model.cpf, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.cpf, "", new { @class = "text-danger" })



                                                <label class="control-label">Senha:</label>
                                                @Html.PasswordFor(model => model.senhaAtendente, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.senhaAtendente, "", new { @class = "text-danger" })

                                            </div>
                                        </div>
                                    </div>

                                    
                                </form>
                                
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <script src="vendor/jquery/jquery.min.js"></script>
        <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
        <script src="vendor/jquery-easing/jquery.easing.min.js"></script>
        <script src="js/sb-admin-2.min.js"></script>
    </div>
}

