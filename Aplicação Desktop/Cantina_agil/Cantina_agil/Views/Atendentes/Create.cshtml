                @Html.ValidationMessageFor(model => model.loginAtendente, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.senhaAtendente, htmlAttributes: new { @class = "control-label col-md-2" })
