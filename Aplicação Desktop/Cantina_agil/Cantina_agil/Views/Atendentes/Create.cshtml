@model Cantina_agil.Models.Atendente

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Criando...</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
