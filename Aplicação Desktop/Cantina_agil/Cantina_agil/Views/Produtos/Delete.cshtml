@model Cantina_agil.Models.Produto

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Deletar</h2>

<div>
    <h4>Produtos</h4>
    <hr />
    <dl class="dl-horizontal">

        <dd>
            <label>Nome:</label>   @Html.DisplayFor(model => model.nomeProduto)
        </dd>
        <hr />
        <dd>
            <label>Valor:</label> @Html.DisplayFor(model => model.valor)
        </dd>
        <hr />

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()
        <h3>Tem certeza que deseja deletar?</h3>

        <div class="form-actions no-color">
            <input type="submit" value="Deletar" class="btn btn-primary" /> 
            <a href=@Url.Action("Index","Produtos") class="btn btn-primary" data-toggle="button">
                Voltar para Lista
            </a> 
        </div>
    }
</div>
