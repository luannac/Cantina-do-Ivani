@model Cantina_agil.Models.Atendente

@{
    ViewBag.Title = "Logar";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

@using (Html.BeginForm("Login", "Log", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="image">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-10 col-lg-12 col-md-9">
                    <div class="card o-hidden border-0 shadow-lg my-5 ">
                        <div class="card-body p-0">
                            <div class="row">
                                <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                                <div class="col-lg-6">
                                    <div class="p-5">
                                        <div class="form-horizontal">
                                            <div class="text-center">
                                                <h1 class="h4 text-gray-900 mb-4">Bem-Vindo!</h1>
                                            </div>
                                            <hr />
                                            <form class="user">
                                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.loginAtendente, "Login", htmlAttributes: new { @class = "control-label " })
                                                    <div>
                                                        @Html.EditorFor(model => model.loginAtendente, new { htmlAttributes = new { @class = "form-control" } })
                                                        @Html.ValidationMessageFor(model => model.loginAtendente, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>

                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.senhaAtendente, "Senha", htmlAttributes: new { @class = "control-label " })
                                                    <div>
                                                        @Html.EditorFor(model => model.senhaAtendente, new { htmlAttributes = new { @class = "form-control" } })
                                                        @Html.ValidationMessageFor(model => model.senhaAtendente, "", new { @class = "text-danger" })
                                                   </div>
                                                </div>

                                                <div class="form-group">
                                                    <div class="col-md-offset-2 col-md-10">
                                                        <input type="submit" value="Logar" class="btn btn-primary btn-user btn-block" />
                                                        <hr>
                                                        <div class="text-center">
                                                            @Html.ActionLink("Esqueceu sua senha?", "RecuperarSenha", "Log")
                                                        </div>
                                                        <!-- <div class="text-center">
                                                            <a href="~/Views/Account/Registrar.cshtml">Criar uma Conta</a>
                                                            /@@Html.ActionLink("Criar Conta", "Cadastrar", "Log")
                                                        </div> -->
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                           
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
         </div>
      </div>
     }
