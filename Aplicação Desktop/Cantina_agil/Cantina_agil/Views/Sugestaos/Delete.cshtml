@model Cantina_agil.Models.Sugestao

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Deletar</h2>


<div>
    <h4>Sugestões</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <label>Sugestão</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.sugestao1)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()
        <h3>Tem certeza que deseja Deletar?</h3>
        <div class="form-actions no-color">
            <input type="submit" value="Deletar" class="btn btn-primary" /> |
            <a href=@Url.Action("Index","Sugestoes") class="btn btn-primary" data-toggle="button">
                Voltar para Lista
            </a>
        </div>
    }
</div>
