@model IEnumerable<Cantina_agil.Models.Produto>
@{
    ViewBag.Title = "Pdv";
    Layout = "~/Views/Shared/_LayoutVenda.cshtml";
}


<div class="align-self-center">
    
    <div class="container margin-top-mob-10px">
        <div class="input-group">
            <div class="form-group">
                <a href="@Url.Action("Index","Menu")">
                    <input type="button" class="btn btn-primary btn-lg" value="Voltar Menu" />
                </a>
            </div>
            <label class="codigo">Codigo</label>
            <input id="cpCodigo" onkeyup="PressKeyCpCodigo();" type="text" aria-label="First name" class="form-control">
            <input id="cpQuant" onkeyup="PressKeyCpQuant();" type="text" aria-label="Last name" class="form-control">
        </div>
        <div class="voltar">
            <a class="btn btn-primary" href="#" onclick="addProduto();">
                <span class="input-group-text">Confirmar</span>
            </a>

            </div>
       
               </div>
   
                <div class="col-xs-12 col-md-6">

                    <div class="container-venda height-675px-mob" >


                        <input data-val="true" data-val-number="The field NotaFiscalConsumidorId must be a number." data-val-required="The NotaFiscalConsumidorId field is required." id="NotaFiscalConsumidorId" name="NotaFiscalConsumidorId" type="hidden" value="230581" />

                        <div class="container-venda-lista">
                            <table class="table">
                                        <tr>
                                            <th>
                                                <label class="label-control">Código</label>
                                            </th>
                                            <th>
                                                <label class="label-control">Nome</label>
                                            </th>
                                            <th>
                                                <label class="label-control">Valor</label>
                                            </th>
                                            <th>
                                                <label class="label-control">Quantidade</label>
                                            </th>
                                        </tr>
                                    <tbody id="areaLancamentos" class="campodeprodutos">
                                    </tbody>
                                
                                </table>
                            <div class="campodecompra">

                                <h2 id="ValorTotal">Preço Total: 0,00</h2>

                            </div>
                        </div>


                                <div class="container-venda-acoes">
                                    <hr />
                                    <div class="row">
                                        <div class="col-xs-6">
                                            <a href=@Url.Action("CancelarVenda","Venda") id="btnLimpar" class="btn btn-danger btn-lg font-size-13px-mob">Cancelar</a>
                                        </div>
                                        <div class="col-xs-6">
                                            <a href=@Url.Action("FinalizarVenda","Venda") id="btnPagamento" class="btn btn-success btn-lg  font-size-13px-mob"> Pagamento</a>
                                        </div>
                                        
                                    </div>
                                </div>
                            </div>
                </div>
            <p>
            <button class="btn btnLista btn-primary" type="button" data-toggle="collapse" data-target="#collapseProdutos" aria-expanded="false" aria-controls="collapseExample">
                Lista Produtos
            </button>
        </p>
        </div>



<div class="collapse" id="collapseProdutos">
    <table class="table table-striped table2">
        <tr>
            <th>
                <label class="label-control">Código</label>
            </th>
            <th>
                <label class="label-control">Nome</label>
            </th>
            <th>
                <label class="label-control">Valor</label>
            </th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.idProduto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nomeProduto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.valor)
                </td>
            </tr>
        }
        </table>
</div>

<a href="#" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
    Launch demo modal
</a>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>

    
          