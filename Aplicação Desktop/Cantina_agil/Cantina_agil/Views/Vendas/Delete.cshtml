@model Cantina_agil.Models.Transacao

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Deletar</h2>

<div>
    <h4>Transação</h4>
    <hr />
    <dl class="dl-horizontal">

        <dd>
            <label>Valor da Tansação</label>  @Html.DisplayFor(model => model.valorTransacao)
        </dd>

        <dd>
            <label>Data da Transação</label>  @Html.DisplayFor(model => model.dataTransacao)
        </dd>

        <dd>
            <label>Pago</label>  @Html.DisplayFor(model => model.pago)
        </dd>

        <dd>
            <label>Data do Pagamento</label>  @Html.DisplayFor(model => model.dataPagamento)
        </dd>
        <dd>
            <label>Nome do Cliente</label>  @Html.DisplayFor(model => model.Cliente.nomeCliente)
        </dd>

        <dd>
            @Html.DisplayFor(model => model.EntradaSaida.idEntradaSaida)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()
        <h3>Tem certeza que deseja Deletar?</h3>

        <div class="form-actions no-color">
            <input type="submit" value="Deletar" class="btn btn-primary" />
            <a href=@Url.Action("Index","Vendas") class="btn btn-primary" data-toggle="button">
                Voltar para Lista
            </a>
        </div>
    }
</div>
