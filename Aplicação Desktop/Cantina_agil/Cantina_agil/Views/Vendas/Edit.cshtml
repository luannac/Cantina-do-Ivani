@model Cantina_agil.Models.Transacao

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Editar</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Transação</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.idTransacao)

        <div class="form-group">
            <label>Valor da Transação</label>
           
                @Html.EditorFor(model => model.valorTransacao, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.valorTransacao, "", new { @class = "text-danger" })
           
        </div>

        <div class="form-group">
            <label>Data da Transação</label>

                @Html.EditorFor(model => model.dataTransacao, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.dataTransacao, "", new { @class = "text-danger" })
           
        </div>

        <div class="form-group">
            <label>Pago</label>
                <div class="checkbox">
                    @Html.EditorFor(model => model.pago)
                    @Html.ValidationMessageFor(model => model.pago, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
             <label>Data do Pagamento</label>

                @Html.EditorFor(model => model.dataPagamento, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.dataPagamento, "", new { @class = "text-danger" })
            
        </div>
        

        <div class="form-group">
           <label>Nome do Cliente</label>

                @Html.DropDownList("idCliente_Transacao", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.idCliente_Transacao, "", new { @class = "text-danger" })
            </div>
      

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a href=@Url.Action("Index","Vendas") class="btn btn-primary" data-toggle="button">
                    Voltar para Lista
                </a>
            </div>
        </div>
    </div>
}
